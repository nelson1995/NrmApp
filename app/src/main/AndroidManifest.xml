<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="katale.nelson.nrmapp">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/HiddenTitleTheme">
        <activity
            android:name=".AboutActivity"
            android:label="@string/title_activity_about"
            android:theme="@style/HiddenTitleTheme.NoActionBar"></activity>
        <activity
            android:name=".Manifesto_2016_Activity"
            android:label="@string/title_activity_manifesto_2016_"
            android:theme="@style/HiddenTitleTheme.NoActionBar" />
        <activity
            android:name=".Manifesto_2020_Activity"
            android:label="@string/title_activity_manifesto_2020_"
            android:theme="@style/HiddenTitleTheme.NoActionBar" />
        <activity
            android:name=".NecActivity"
            android:label="@string/title_activity_nec"
            android:theme="@style/HiddenTitleTheme.NoActionBar" />
        <activity
            android:name=".CecActivity"
            android:label="@string/title_activity_cec"
            android:theme="@style/HiddenTitleTheme.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/HiddenTitleTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>